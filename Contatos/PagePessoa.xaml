<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contatos.PagePessoa"
             Title="Dados">
    <ContentPage.Content>
        <StackLayout Padding="10,20,10,10"
                     Orientation="Vertical">
            <Label Text="Código" FontSize="Small"/>
            <Entry Text="{Binding ID}"/>
            <Label Text="Nome" FontSize="Small"/>
            <Entry Text="{Binding  Nome}" />
            <Label Text="Telefone" FontSize="Small"/>
            <Entry Text="{Binding Telefone}"/>
            <Label Text="email" FontSize="Small"/>
            <Entry Text="{Binding email}"/>
            <Button Text="Salvar" FontSize="10" WidthRequest="70"
                    Clicked="onSalvePessoa" x:Name="btnSalvar"/>

            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
